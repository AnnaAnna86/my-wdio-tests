describe('üß™ –¢–µ—Å—Ç—É–≤–∞–Ω–Ω—è –¥–∏–Ω–∞–º—ñ—á–Ω–æ–≥–æ —á–µ–∫–±–æ–∫—Å—É', () => {
    it('–ø–æ–≤–∏–Ω–µ–Ω –∑–º—ñ–Ω–∏—Ç–∏ —Å—Ç–∞–Ω —á–µ–∫–±–æ–∫—Å—É —ñ –ø–æ–±–∞—á–∏—Ç–∏ –ø–æ–≤—ñ–¥–æ–º–ª–µ–Ω–Ω—è', async () => {
        // 1Ô∏è‚É£ –í—ñ–¥–∫—Ä–∏–≤–∞—î–º–æ —Å—Ç–æ—Ä—ñ–Ω–∫—É
        await browser.url('https://the-internet.herokuapp.com/checkboxes')
        console.log('üîµ –í—ñ–¥–∫—Ä–∏—Ç–æ —Å—Ç–æ—Ä—ñ–Ω–∫—É –∑ —á–µ–∫–±–æ–∫—Å–∞–º–∏')

        // 2Ô∏è‚É£ –ó–Ω–∞—Ö–æ–¥–∏–º–æ —á–µ–∫–±–æ–∫—Å–∏
        const checkboxes = await $$('input[type="checkbox"]')

        // 3Ô∏è‚É£ –ü–µ—Ä–µ–≤—ñ—Ä—è—î–º–æ, —â–æ –ø–µ—Ä—à–∏–π —á–µ–∫–±–æ–∫—Å –ù–ï –æ–±—Ä–∞–Ω–∏–π
        const isChecked = await checkboxes[0].isSelected()
        expect(isChecked).toBe(false)
        console.log('üü¢ –ü–µ—Ä—à–∏–π —á–µ–∫–±–æ–∫—Å —Å–ø–æ—á–∞—Ç–∫—É –Ω–µ –æ–±—Ä–∞–Ω–∏–π')

        // 4Ô∏è‚É£ –ö–ª—ñ–∫–∞—î–º–æ –ø–æ –Ω—å–æ–º—É
        await checkboxes[0].click()
        console.log('üü£ –ö–ª—ñ–∫–Ω—É–ª–∏ –Ω–∞ —á–µ–∫–±–æ–∫—Å')

        // 5Ô∏è‚É£ –ü–µ—Ä–µ–≤—ñ—Ä—è—î–º–æ, —â–æ –≤—ñ–Ω —Ç–µ–ø–µ—Ä –≤–∏–±—Ä–∞–Ω–∏–π
        const isNowChecked = await checkboxes[0].isSelected()
        expect(isNowChecked).toBe(true)
        console.log('‚úÖ –ß–µ–∫–±–æ–∫—Å —Ç–µ–ø–µ—Ä –æ–±—Ä–∞–Ω–∏–π')
    })
})
